@using System.Activities.Expressions
@using Digipost.Api.Client.Domain.Search
@model List<Digipost.Api.Client.Domain.Search.SearchDetails>

@{
    ViewBag.Title = "Search";
}

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <td>@Html.LabelFor(m => Model[0].FirstName)</td>
                <td>@Html.LabelFor(m => Model[0].MiddleName)</td>
                <td>@Html.LabelFor(m => Model[0].LastName)</td>
                <td>@Html.LabelFor(m => Model[0].DigipostAddress)</td>
                <td>@Html.LabelFor(m => Model[0].MobileNumber)</td>
                <td>@Html.LabelFor(m => Model[0].OrganizationName)</td>
                <td>@Html.LabelFor(m => Model[0].SearchDetailsAddress)</td>
                <td> </td>
            </tr>
        </thead>

        <tbody>
            @foreach (var person in Model)
                {
                <tr>
                    <td>@Html.LabelForModel(person.FirstName)</td>
                    <td>@Html.LabelForModel(person.MiddleName)</td>
                    <td>@Html.LabelForModel(person.LastName)</td>
                    <td>@Html.LabelForModel(person.DigipostAddress)</td>
                    <td>@Html.LabelForModel(person.MobileNumber)</td>
                    <td>@Html.LabelForModel(person.OrganizationName)</td>
                    <td>
                        @if (person.SearchDetailsAddress != null)
                        {
                            @Html.LabelForModel(person.SearchDetailsAddress.ToString())
                        }
                    </td>
                    
                   <td>@Html.ActionLink("Send", "GoToSend", new { person.DigipostAddress })</td>
                </tr>
            }
        </tbody>
    </table>
}
